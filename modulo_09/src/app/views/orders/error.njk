{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

  {% call card.render("", "order-error container") %}

  <div class="content">

    <div class="error-lottie"></div>

    <div class="info-error">
      <h2>Desculpe</h2>

      <p>Algo deu errado com o seu pedido</p>

      <a href="#" onclick="history.back()">Tente novamente</a>
    </div>

  </div>

  {% endcall %}

  <script src="/animations/lottie.min.js"></script>

  <script>
    const element = document.querySelector(".error-lottie")

    lottie.loadAnimation({container: element, render: "svg", loop: false, autoplay: true, path: "/animations/76705-error-animation.json"})
  </script>

{% endblock %}
