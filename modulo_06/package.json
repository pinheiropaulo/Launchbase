{
  "name": "launchstore",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "npm-run-all -p nodemon build:sass",
    "start": "npm-run-all -p nodemon build:sass browsersync",
    "nodemon": "nodemon src/server.js",
    "browsersync": "browser-sync start --proxy http://localhost:8080 --files 'public,src/app/views'",
    "build:sass": "sass --watch ./src/app/scss/index.scss:public/styles/index.css"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "method-override": "^3.0.0",
    "nunjucks": "^3.2.3",
    "pg": "^8.7.1",
    "sass": "^1.38.0"
  },
  "devDependencies": {
    "browser-sync": "^2.27.5",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "sucrase": "^3.20.1"
  }
}
