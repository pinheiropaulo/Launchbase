{% extends "layout.njk" %}

{% block content %}

  <section class="container product-single">

    <div class="gallery">
      <img src="https://place-hold.it/500x500?text=PRODUTO SEM FOTO">
    </div>

    <div class="info">
      <h1>{{product.name}}</h1>

      <div class="published">
        Publicado em:
        {{product.published.day}}
        às
        {{product.published.hour}}
      </div>

      <div class="description">
        {{product.description}}
      </div>

      <div class="price-buy">

        <div class="price">
          {{product.price}}

          {% if product.price !== product.oldPrice%}
            <span class="price-old">
              {{product.oldPrice}}
            </span>
          {% endif %}

        </div>

        <div class="buy">
          {% if product.status == 0 %}
            <p class="unavailable">Produto Indisponível</p>
          {% elseif product.quantity == 0 %}
            <p class="unavailable">Produto fora de Estoque</p>
          {% else %}
            <button class="button">Comprar</button>
          {% endif %}
        </div>
      </div>

    </div>

  </section>

{% endblock %}
