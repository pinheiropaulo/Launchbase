{% extends "layout.njk" %}

{% block content %}
  <section class="container shop">

    <h2>Ãšltimos Produtos</h2>

    <div class="item">
      {% for product in products %}

        <div class="product">

          <div class="image" style="background-image: url({{product.img if product.img else '//place-hold.it/500x360'}})"></div>
          {% if product.oldPrice != product.price %}
            <div class="old-price">{{product.oldPrice}}</div>
          {% endif %}

          <p>{{product.price}}</p>
          <h4>{{product.name}}</h4>

          <a href="/products/{{product.id}}" class="button">Ver Produto</a>

        </div>

      {% endfor %}
    </div>

  </section>
{% endblock %}
