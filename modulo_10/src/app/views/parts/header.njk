<header>
  <div class="container">
    <a href="/">
      <div class="logo">
        <h1>LaunchStore</h1>
        <h2>Compra E Venda</h2>
      </div>
    </a>

    <form action="/products/search" method="get" class="search">
      <input type="text" name="filter" placeholder="Buscar por Produtos" {%  if search.term %} value="{{search.term}}" {% endif %}>
    </form>

    <nav class="primary">
      <ul>
        <li>
          <a href="/products/create">
            <i class="material-icons">add</i>
            Novo Anúncio
          </a>
        </li>
        <li class="drop_dow-container">

          <a href="/accounts">
            <i class="material-icons">account_circle</i>
            Minha Conta
          </a>

          {% if session.userId %}

            <ul class="drop_dow">

              <li>
                <a href="/users">Configurações</a>
              </li>

              <li>
                <a href="/users/ads">Meus Anúncio</a>
              </li>

              <li>
                <a href="/orders">Meus pedidos</a>
              </li>

              <li>
                <a href="/orders/sales">Minhas vendas</a>
              </li>

              <li>
                <form action="/users/logout" method="POST">
                  <button>Sair</button>
                </form>
              </li>

            </ul>

          {% endif %}
        </li>

        <li class="cart">
          <a href="/cart">
            <i class="material-icons">shopping_cart</i>

            {% if (session.cart) and (session.cart.total.quantity > 0) %}
              <span id="cart-status-info">{{session.cart.total.quantity}}</span>
            {% endif %}

          </a>

        </li>
      </ul>
    </nav>

  </div>
</header>
