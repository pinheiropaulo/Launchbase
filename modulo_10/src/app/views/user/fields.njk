<div class="item">
  <div>Nome Completo</div>
  <div class="input">
    <input
      required="required"
      type="text"
      name="name"
      placeholder="Digite seu nome completo"
      value="{{ user.name }}"
    />
  </div>
</div>

<div class="item">
  <div>Email</div>
  <div class="input">
    <input
      type="email"
      name="email"
      placeholder="Digite Email"
      value="{{ user.email }}"
      onblur="Validate.apply(this, 'isEmail')"
    />
  </div>
</div>

<div class="item">
  <div>Senha</div>
  <div class="input">
    <input
      type="password"
      name="password"
      {%
      if
      not
      user.id
      %}
      placeholder="Escolha uma senha"
      {%else%}
      placeholder="Digite sua senha para atualizar o cadastro"
      {%
      endif
      %}
    />
  </div>
</div>

{% if not user.id %}
<div class="item">
  <div>Confirmar Senha</div>
  <div class="input">
    <input
      type="password"
      name="passwordRepeat"
      placeholder="Confirme a senha"
    />
  </div>
</div>
{% endif %}

<div class="item">
  <div>CPF ou CNPJ</div>
  <div class="input">
    <input
      type="text"
      name="cpf_cnpj"
      placeholder="Digite seu documento"
      value="{{ user.cpf_cnpj }}"
      onkeydown="Mask.apply(this, 'cpfCNPJ')"
      onblur="Validate.apply(this, 'isCpfCNPJ')"
    />
  </div>
</div>

<div class="item">
  <div>CEP</div>
  <div class="input">
    <input
      type="text"
      name="cep"
      placeholder="Digite seu CEP"
      value="{{ user.cep }}"
      onkeydown="Mask.apply(this, 'cep')"
      onblur="Validate.apply(this, 'isCEP')"
    />
  </div>
</div>

<div class="item">
  <div>Endereço Completo</div>
  <div class="input">
    <input
      type="text"
      name="address"
      placeholder="Digite seu Endereço"
      value="{{ user.address }}"
    />
  </div>
</div>
