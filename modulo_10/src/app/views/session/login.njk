{% extends "layout.njk" %}

{% import "parts/card.njk" as card %}

{% block content %}

  {% call card.render("Entar", "login form container") %}

  <form method="POST" action="/users/login">

    <div class="fields">
      {% include "session/fields.njk" %}
    </div>

    <button class="button" type="submit">Entar</button>

    <div class="footer">
      <ul>
        <li>
          <a href="/users/register">Registre-se</a>
        </li>
        <li>
          <a href="/users/forgot-password">Esquesi minha senha</a>
        </li>
      </ul>
    </div>

  </form>

  {% endcall %}

{% endblock %}
